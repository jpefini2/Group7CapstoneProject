@model AdminAdvisementManagerWebApp.Models.AddStudentVM;
@{
    ViewData["Title"] = " | add student";
}

<form asp-action="Submit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="NewStudent.FirstName">First Name: </label>
        <input asp-for="NewStudent.FirstName" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="NewStudent.LastName">Last Name: </label>
        <input asp-for="NewStudent.LastName" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="NewStudent.Gender">Gender: </label>
        <select asp-for="NewStudent.Gender" asp-items="Model.Gender" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="NewStudent.Email">Email: </label>
        <input asp-for="NewStudent.Email" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="NewStudent.UserName">User Name: </label>
        <input asp-for="NewStudent.UserName" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="NewStudent.generalAdvisorId">General Advisor: </label>
        <select asp-for="NewStudent.generalAdvisorId" asp-items="Model.GeneralAdvisors" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="NewStudent.facultyAdvisorId">Faculty Advisor: </label>
        <select asp-for="NewStudent.facultyAdvisorId" asp-items="Model.FacultyAdvisors" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="NewStudent.Password">Password: </label>
        <input asp-for="NewStudent.Password" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="NewStudent.ConfirmPassword">Confirm Password: </label>
        <input asp-for="NewStudent.ConfirmPassword" class="form-control">
    </div>
    <div class="col-sm-4 offset-sm-2">
        <button type="submit" class="btn btn-primary">Add</button>
        <a asp-action="Students" class="btn btn-dark">Cancel</a>
    </div>
</form>